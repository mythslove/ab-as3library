/*** * @author ABº* http://blog.antoniobrandao.com/* * Handy class to resize display objects or bitmaps proportionally,* mantaining a provided maximum width and height.* * USAGE : * * 	  import com.ab.utils.Resize* * 	  Resize.object(object_instance_name, 60, 60)* * DEPENDENCIES :* * 	  none* */package com.ab.utils{	import flash.display.*;		public class Resize	{		/// resizes an Object proportionally		public static function object(o:Object, max_height:Number, max_width:Number) 		{			var r:Number;			r = o.height / o.width;						if (o.width > max_width) 			{				o.width  = max_width;				o.height = Math.round(o.width * r);			}						if (o.height > max_height) 			{				o.height = max_height;				o.width  = Math.round(o.height / r);			}		}				/// resizes a Bitmap proportionally		public static function bitmap(b:Bitmap, max_height:Number, max_width:Number) 		{			var r:Number;			r = b.height / b.width;						if (b.width > max_width) 			{				b.width  = max_width;				b.height = Math.round(b.width * r);			}						if (b.height > max_height) 			{				b.height = max_height;				b.width  = Math.round(b.height / r);			}		}	}}