/*** * @author ABº* http://blog.antoniobrandao.com/* * Handy class to resize display objects proportionally,* mantaining a provided maximum width and height.* * USAGE : * * 	  import com.ab.utils.Resize* * 	  Resize.object(object_instance_name, 60, 60)* * DEPENDENCIES :* * 	  none* */package com.ab.utils{	import flash.display.*;		public class Resize	{		public static function object(o:*, max_height:Number, max_width:Number) 		{			if (o.width != null) 			{				var r:Number;				r = o.height / o.width;								if (o.width > max_width) 				{					o.width  = max_width;					o.height = Math.round(o.width * r);				}								if (o.height > max_height) 				{					o.height = max_height;					o.width  = Math.round(o.height / r);				}			}			else			{				trace("Resize class ::: Error - Provided object has no width/height properties");			}		}	}}