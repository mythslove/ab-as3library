package com.ab.utils{	import flash.text.*	public class TextHandle extends TextField 	{				private var _format		:TextFormat;				public function TextHandle(w:Number = 100, h:Number = 20, xt:Number = 0, yt:Number = 0, size:int = 11, colour:uint = 0x222222, align:String = "left", mult:Boolean = true, auto:String = "none", sel:Boolean = false){						x					= xt;			y					= yt;			width 				= w;			height				= h;						_format				= new TextFormat("sans");			_format.color		= colour;			_format.size		= size;			_format.align		= align;						autoSize			= auto;			multiline			= mult;			wordWrap			= mult;			selectable			= sel;			antiAliasType		= AntiAliasType.ADVANCED;						defaultTextFormat	= _format;			mouseEnabled		= false;					}				public function get format():TextFormat { return _format; }			}}