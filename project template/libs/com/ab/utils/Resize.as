/*** * @author ABº* http://blog.antoniobrandao.com/* * Handy class to resize display objects proportionally,* mantaining a provided maximum width and height.* * USAGE : * * 	  import com.ab.utils.Resize* * 	  Resize.object(object_instance_name, 60, 60)* * DEPENDENCIES :* * 	  none* */package com.ab.utils{	import flash.display.*;	import flash.geom.Rectangle;	import org.casalib.util.RatioUtil;		public class Resize	{		public static function objectToFit(o:DisplayObject, _height:Number, _width:Number):void		{			var thisSize:Rectangle 	= new Rectangle(0, 0, o.width, o.height);			var bounds:Rectangle   	= new Rectangle(0, 0, _width, _height);						var result:Rectangle  	= RatioUtil.scaleToFit(thisSize, bounds);			o.width  				= result.width;			o.height 				= result.height;		}				public static function object(o:*, max_height:Number, max_width:Number):void		{			if (o.width != null) 			{				var r:Number;				r = o.height / o.width;								if (o.width  > max_width) 				{					o.width  = max_width;					o.height = Math.round(o.width * r);				}								if (o.height > max_height) 				{					o.height = max_height;					o.width  = Math.round(o.height / r);				}			}			else			{				trace("Resize class ::: Error - Provided object has no width/height properties");			}		}	}}